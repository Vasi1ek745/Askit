<div class = "m-3 p-3 border border-3 shadow-3">
    <%= form_with model: [@question, @answer] do |form| %>
        <h5 class = "mb-3 ms-3">Ask the questions!</h5>
        <div class="input-group mt-2 ms-3 pe-5 ">
            
            <%= form.text_area :body, class:"form-control", placeholder:"body", required: "true"  %>
        </div>
        <div class="mt-2 ms-3 ">
            <%= form.submit "create!" , class:"mt-3 btn btn-outline-dark" %>
        </div>
    <% end %>
</div>